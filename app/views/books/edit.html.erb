<h4>Editing Book</h4>
<%= form_with model:@book do |f| %>

<div class="form">
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <a><%= f.submit ' Update Book ' %></a>
</div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>

<% end %>
